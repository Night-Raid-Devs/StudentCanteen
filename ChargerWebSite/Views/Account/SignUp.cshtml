
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/MyScript")
    <meta name="viewport" content="width=device-width" />
    <title>SignUp</title>
</head>
<body style="min-width:480px">
    <div class=" container bs-cont">
        <div class="row">
            <div class=" container bs-cont">
                <div class="col-sm-1 col-md-2 col-lg-2"> </div>
             
                
                    <div class="container container-table">
                        <div class="col-sm-10 col-md-8 col-lg-8">
                            <div class="form-group">
                                <h1 style="text-align:center; color:#eb9822; margin-top:100px">Регистрация</h1>
                                <hr />
                                <ol class="track-progress" data-steps="3">
                                    <li>
                                        <span style="color:#eb9822">Профиль</span>
                                        <i></i>
                                    </li><li>
                                        <span>Дополнительно</span>
                                    </li><li>
                                        <span>Оплата</span>
                                        <i></i>
                                    </li>
                                </ol>
                               
                               
                                @using (Html.BeginForm("SignUp", "Account", FormMethod.Post, new { onsubmit = "return ValidSignUp(this)"}))
                                {
                                    <div style="margin-top:40px; text-align:center; min-width:100%">
                                        <input style="margin: 20px auto 0 auto" name="email" id="email" type="email" class="form-control input-lg" placeholder="Email" aria-describedby="basic-addon1" onblur="return checkEmptyText(this,true)">
                                        <input style="margin: 20px auto 0 auto" name="password" id="password" type="password" pattern="[A-Za-zА-Яа-яЁё0-9]{5,}" title="Пароль должен иметь 5 и более символов" class="form-control input-lg" placeholder="Пароль" aria-describedby="basic-addon1" onblur="return checkEmptyText(this, true)">
                                        <input style="margin: 20px auto 0 auto" name="password2" id="password2" type="password" class="form-control input-lg" placeholder="Повторите пароль" aria-describedby="basic-addon1" onblur="return checkEmptyText(this,true)">
                                        
                                        <select class="form-control input-lg" name="CustomerTypeID" id="customerType" style="margin: 20px auto 0 auto; " onchange="Unblock()">
                                            <option value="1">Пользователь</option>
                                            <option value="2">Организация</option>
                                        </select>
                                       
                                        <div id="SimpleCustomer" style="display:block">
                                            <input style="margin: 20px auto 0 auto" name="firstName" id="firstName" type="text" class="form-control input-lg" placeholder="Имя" aria-describedby="basic-addon1" onblur="checkEmptyText(this, true)">
                                            <input style="margin: 20px auto 0 auto" name="lastName" id="lastName" type="text" class="form-control input-lg" placeholder="Фамилия" aria-describedby="basic-addon1" onblur="checkEmptyText(this, true)">
                                        </div>
                                        <div id="Organization" style="display:none">
                                            <input style="margin: 20px auto 0 auto" name="organizationName" id="organizationName" type="text" class="form-control input-lg" placeholder="Название организации" aria-describedby="basic-addon1" onblur="checkEmptyText(this, true)">
                                        </div>

                                        <div>
                                            <input style="margin: 20px auto 0 auto" name="phoneNumber" id="phoneNumber" pattern="[0-9]{13}" title="Формат +380505550505" class="form-control input-lg" placeholder="Телефон" aria-describedby="basic-addon1" onblur="checkEmptyText(this, true)">
                                        </div>

                                        <div style="margin: 20px">
                                            <input type="submit"  value="Продолжить" class="btn btn-default btn-lg" style="color:#eb9822">
                                        </div>
                                        <div id="ErrorMessage" class="alert alert-danger" style="margin-top:50px; display:none"></div>
                                        @if (ViewBag.Result != null)
                                        {
                                            <div id="ServerMessage" class="alert alert-danger" style="margin-top:50px">@ViewBag.Result</div>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-1 col-md-2 col-lg-2"> </div>
                </div>
            </div>
        </div>
    </body>
</html>

